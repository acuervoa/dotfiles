# Nota: define tu identidad en ~/.gitconfig_local (no versionado)
# Ejemplo:
#   [user]
#       name = Tu Nombre
#       email = tu@email.com

[init]
    defaultBranch = main

[include]
    path = ~/.gitalias

[core]
    editor = nvim
    # Si tienes `delta`, puedes activarlo en ~/.gitconfig_local:
    #   [core]
    #       pager = delta
    hooksPath = ~/.git-hooks

[color]
    ui = auto

[pull]
    rebase = true

[merge]
    ff = only

[rebase]
    autostash = true
    autosquash = true

[fetch]
    prune = true

[push]
    autoSetupRemote = true
    followTags = true
    #default = current

[commit]
    verbose = true
    template = ~/.gitmessage

[status]
    submoduleSummary = true

[diff]
    renames = true
    mnemonicPrefix = true

[credential]
	useHttpPath = true

# Incluir configuraci√≥n local para datos personales (nombre, email, etc.)
[include]
    path = ~/.gitconfig_local
