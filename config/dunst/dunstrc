[global]
    monitor = 0
    follow = keyboard
    fullscreen = pushback

    width = 360
    height = (0, 320)
    origin = top-right
    offset = (16, 60)
    scale = 0
    notification_limit = 20

    progress_bar = true
    progress_bar_height = 12
    progress_bar_frame_width = 0
    progress_bar_min_width = 180
    progress_bar_max_width = 340
    progress_bar_corner_radius = 6
    icon_corner_radius = 6
    icon_corners = all

    indicate_hidden = yes
    transparency = 0

    separator_height = 0
    padding = 10
    horizontal_padding = 10
    text_icon_padding = 8

    frame_width = 2
    # Catppuccin Mocha (tu paleta)
    frame_color = "#89b4fa"        # blue
    separator_color = frame
    gap_size = 6

    sort = yes
    show_age_threshold = 60
    ellipsize = end
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    enable_recursive_icon_lookup = true
    icon_theme = Adwaita
    icon_position = left
    min_icon_size = 24
    max_icon_size = 64

    sticky_history = yes
    history_length = 40

    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true

    title = Dunst
    class = Dunst

    # Esquinas redondeadas
    corner_radius = 10
    corners = all

    force_xinerama = false
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

    # TIPOGRAFÍA: (corrijo la línea)
    font = MesloLGS Nerd Font 11

[experimental]
    per_monitor_dpi = false

[urgency_low]
    background = "#1e1e2e"
    foreground = "#a6adc8"
    timeout = 3
    default_icon = dialog-information

[urgency_normal]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    timeout = 5
    default_icon = dialog-information

[urgency_critical]
    background = "#11111b"
    foreground = "#f38ba8"
    frame_color = "#f38ba8"
    timeout = 0
    default_icon = dialog-warning

# Volumen: que todas las notis de volumen se reemplacen/actualicen (stack_tag)
[volume_stack]
    summary = "Volumen*"
    set_stack_tag = "volume"
    timeout = 1500
    history_ignore = yes

# Micrófono: igual idea (si lo notificas)
[mic_stack]
    summary = "Micrófono*"
    set_stack_tag = "mic"
    timeout = 1500
    history_ignore = yes

# Playerctl (play/pause/next): no atascar historial
[playerctl_media]
    appname = "playerctl"
    history_ignore = yes
    timeout = 1500

# Rofi: evita sombra/foco raro (opcional si te molesta)
[rofi]
    appname = "rofi"
    history_ignore = yes

# Formato por defecto (si quieres mantenerlo simple)
[format_default]
    summary = "*"
    format = "<b>%s</b>\n%b"

include "~/.config/dunst/mocha.conf"
