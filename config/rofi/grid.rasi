/* Rofi theme for grid layout */
configuration {
    font: "Monospace 12";
    show-icons: true;
}

window {
    width: 30%;
    height: 25%;
}

listview {
    columns: 3;
    lines: 2;
    spacing: 1.5em;
    layout: horizontal;
    cycle: false;
}

element {
    orientation: vertical;
    border: 2px solid; 
    border-radius: 5px;
    padding: 10px;
    spacing: 0.5em;
}

element-icon {
    size: 3em;
}

element-text {
    horizontal-align: 0.5;
    vertical-align: 0.5;
}

