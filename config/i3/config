# =======================
# CONFIGURACIÓN DE i3WM
# =======================

# Modificador principal (Super/Win)
set $mod Mod4

# Fuente para títulos de ventana y barras
font pango:MesloLGSDZ Nerd Font 10

# Activar NumLock al iniciar sesión
exec_always --no-startup-id numlockx on


# ======= AUTOSTART PRODUCTIVIDAD ======
# Portapapeles avanzado (historial y búsqueda)
exec --no-startup-id copyq
# Lanzador universal (apps, archivos, cálculos)
exec --no-startup-id albert


# Redshift (temperatura de color, menos fatiga visual)
exec --no-startup-id redshift -l geoclue2 -t 6500:3600 -r

# Ajuste de brillo con teclas Fn (brightnessctl)
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# ======= SCRATCHPAD ÚTILES ========

# Regla para mandarla al scratchpad y dejarla flotante/centrada
for_window [class="scratch-terminal" instance="scratch-terminal"] \
    floating enable, move position center, resize set 1600 900 

# Si existe la mark 'scratch_term' -> toggle con scratchpad show:
bindsym $mod+Shift+Return exec --no-startup-id ~/.config/i3/scripts/toggle_scratch.sh
# Terminal por defecto (Kitty)
bindsym $mod+Return exec --no-startup-id kitty

## Notas rápidas (Obsidian scratch)
#exec --no-startup-id obsidian --class obsidian-scratch
#for_window [class="obsidian-scratch"] floating enable, move position center, resize set 1600 900
bindsym $mod+Shift+n exec --no-startup-id ~/.config/i3/scripts/toggle_scratch_obsidian.sh
#bindsym $mod+Shift+n [class="obsidian-scratch"] scratchpad show
#
## Reproductor de música
#exec  --no-startup-id spotify --class spotify-scratch
#for_window [class="spotify-scratch"] floating enable, move position center, resize set 1200 800
#bindsym $mod+m exec --no-startup-id spotify
#bindsym $mod+Shift+m [class="Spotify"] scratchpad show


# =======================
# LANZADORES
# =======================

#set -x CM_HISTLENGTH 2000
#set -x CM_SELECTIONS clipboard,primary
# Lanzador de aplicaciones (Rofi)
bindsym $mod+d exec --no-startup-id rofi -modi run -show drun -show-icons -font "Noto Sans 13"
bindsym $mod+F11 exec --no-startup-id rofi -show run -fullscreen -font "Noto Sans 13"
bindsym $mod+Shift+d exec --no-startup-id rofi -show window -show-icons -font "Noto Sans 13"
bindsym $mod+v exec --no-startup-id "CM_LAUNCHER=rofi clipmenu"

# =======================
# CONTROL DE VOLUMEN Y MULTIMEDIA
# =======================
set $refresh_i3status killall -SIGUSR1 i3status

#bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5 && $refresh_i3status
#bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5 && $refresh_i3status
#bindsym XF86AudioMute exec --no-startup-id pamixer -t && $refresh_i3status
#bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
set $volscript ~/.config/dunst/scripts/volctl
set $micscript ~/.config/dunst/scripts/micctl

bindsym XF86AudioRaiseVolume exec --no-startup-id $volscript up && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id $volscript down && $refresh_i3status
bindsym XF86AudioMute        exec --no-startup-id $volscript mute && $refresh_i3status

bindsym XF86AudioMicMute     exec --no-startup-id $micscript toggle && $refresh_i3status
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id $micscript up && $refresh_i3status
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id $micscript down && $refresh_i3status


bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# =======================
# MOVIMIENTO Y GESTIÓN DE VENTANAS
# =======================
set $left h
set $down j
set $up k
set $right l

# Mover foco entre ventanas
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Tab workspace back_and_forth

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Mover ventanas
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Alternar entre tiling y flotante
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Alternar pantalla completa (análogo a Tmux 'Z' = Zoom)
bindsym $mod+z fullscreen toggle
# Finder de ventanas (análogo a Tmux prefix+f)
bindsym $mod+f exec --no-startup-id rofi -show window

# Organización de contenedores
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Mod1+h split h
bindsym $mod+Mod1+v split v
#
# Redimensionar contenedor (similar a Alt+Shift+Flechas en tmux)
bindsym $mod+Shift+Left  resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+Right resize grow   width 10 px or 10 ppt
bindsym $mod+Shift+Up    resize grow   height 10 px or 10 ppt
bindsym $mod+Shift+Down  resize shrink height 10 px or 10 ppt

# =======================
# WORKSPACES Y MONITORES
# =======================
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Distribuir escritorios en dos monitores
workspace $ws1 output eDP-1
workspace $ws3 output eDP-1
workspace $ws5 output eDP-1
workspace $ws7 output eDP-1
workspace $ws9 output eDP-1
workspace $ws2 output DP-1
workspace $ws4 output DP-1
workspace $ws6 output DP-1
workspace $ws8 output DP-1
workspace $ws10 output DP-1

# Cambiar entre escritorios
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Mover ventanas entre escritorios
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# =======================
# REINICIAR Y CERRAR SESIÓN
# =======================
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m '¿Quieres salir de i3?' -B 'Sí, salir' 'i3-msg exit'"
bindsym control+mod1+Delete exec --no-startup-id ~/.config/i3/scripts/mode_system.sh
bindsym $mod+q kill

# =======================
# TRANSPARENCIA Y DISEÑO (PICOM)
# =======================
exec_always --no-startup-id picom -b

# =======================
# BARRA DE ESTADO (POLYBAR)
# =======================
exec_always --no-startup-id ~/.config/polybar/launch.sh

# =======================
# SCREENSHOTS (FLAMESHOT)
# =======================
bindsym $mod+F2 exec --no-startup-id flameshot full -p ~/Pictures
bindsym $mod+Shift+F2 exec --no-startup-id flameshot gui -c

# =======================
# AUTOARRANQUE DE APLICACIONES
# =======================
exec --no-startup-id nm-applet
exec --no-startup-id dunst
exec_always --no-startup-id feh --bg-scale ~/Pictures/i3lock/2.jpg

# =======================
# NOTIFICACIONES
# =======================
# Dunst: pausar / reanudar (No molestar)
bindsym $mod+Shift+y exec --no-startup-id ~/.config/polybar/scripts/dunst-toggle.sh
# Dunst: ver historial y re-disparar la última
bindsym $mod+y exec --no-startup-id /usr/bin/dunstctl history-pop

# =======================
# REGLAS PARA VENTANAS FLOTANTES
# =======================
for_window [window_role="task_dialog"] floating enable
for_window [class="Alacritty"] floating disable
for_window [class="^.*"] border pixel 1

# ====== WORKSPACES POR APLICACIÓN ========
#assign [class="Code"]                 $ws4
#assign [class="firefox"]               $ws1
#assign [class="obsidian"]              $ws6

# ===== MOVIMIENTO ENTRE SALIDAS ==========
# Mover ventana al monitor izquierdo/derecho
bindsym $mod+Ctrl+Left move container to output left
bindsym $mod+Ctrl+Right move container to output right

# ===== REGLAS GENERALES ==========
# Evitar que popups rompan el layout
for_window [window_type="dialog"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

gaps inner 6
gaps outer 3
